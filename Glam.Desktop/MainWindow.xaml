<Controls:MetroWindow x:Class="Glam.Desktop.GlamDesktop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        BorderBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"
        GlowBrush="{DynamicResource AccentColorBrush}"
        ShowIconOnTitleBar="False"
        ResizeMode="CanMinimize"
        Title="GW2 Location Aware Music Player" Height="105" Width="325">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="34" Margin="10,43,0,-7" VerticalAlignment="Top" Width="295">
            <Button x:Name="ButtonPlay" FontSize="8" Content="Play" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" RenderTransformOrigin="0.013,0.213" Margin="0,-1,0,0" Height="10"/>
            <Button x:Name="ButtonCopy" FontSize="8" Content="Pause" HorizontalAlignment="Left" VerticalAlignment="Top" Width="38" RenderTransformOrigin="0.013,0.213" Margin="45,-1,0,0"/>
        </Grid>
        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top" Width="295" Height="15"/>
        <Label x:Name="LabelCurrentTrack" Content="Test Content" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Width="295"/>
    </Grid>
</Controls:MetroWindow>
